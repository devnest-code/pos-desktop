{
  "productName": "DevNest POS",
  "version": "1.0.0",
  "identifier": "com.devnest.pos",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DevNest POS",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "DevNest",
    "copyright": "Copyright Â© 2024 DevNest",
    "category": "Business",
    "shortDescription": "Sistema de Punto de Venta",
    "longDescription": "Sistema completo de punto de venta para tiendas, restaurantes y negocios",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["es-ES", "en-US"]
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/devnest-code/devnest-pos-desktop/releases/latest/download/{{target}}-{{arch}}.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIyNTIxMzI4RTc5NzRFNDcKUldSSFRwZm5LQk5TSWlqQWlEZ051RXg0QjIvdkF0TXhuVnk4OE5Idm5lN3dXMXBDMEo1aDU4WWEK"
    }
  }
}
